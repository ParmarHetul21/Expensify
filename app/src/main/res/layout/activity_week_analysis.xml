<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WeekAnalysis">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imgprev"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Date"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imgnext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="586dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:elevation="10dp"
                    android:layout_gravity="center">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/week_chart_analysis"
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:layout_height="300dp"
                    android:layout_marginBottom="15dp">
                </com.github.mikephil.charting.charts.PieChart>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/week_chart_income_card"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:elevation="4dp"
                    android:layout_gravity="center">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/week_chart_income"
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:layout_height="300dp"
                    android:layout_marginBottom="15dp">
                </com.github.mikephil.charting.charts.PieChart>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgtrans"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:visibility="gone"
            app:srcCompat="@drawable/no_trans" />

        <TextView
            android:id="@+id/txttrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Transcation "
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>